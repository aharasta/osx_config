#!/bin/sh

session="iterm-$RANDOM"

tmux start-server

tmux new-session -d -s $session

tmux selectp -t 0 
tmux send-keys "source ~/.bash_profile; clear;" C-m
tmux splitw -h -p 50

tmux selectp -t 1
tmux send-keys "source ~/.bash_profile; clear;" C-m

tmux selectp -t 0

# Pane layout:
#       |
#   0   |   1
#       |   
#       |

tmux attach-session -t $session
