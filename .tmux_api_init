#!/bin/sh
#
# Setup a work space called `work` with two windows
# first window has 3 panes. 
# The first pane set at 65%, split horizontally, set to api root and running vim
# pane 2 is split at 25% and running redis-server 
# pane 3 is set to api root and bash prompt.
# note: `api` aliased to `cd ~/path/to/work`
#
session="woflow-api"
itermSession="$(tmux display-message -p '#S')"

# set up tmux
#tmux start-server
# Kill session started by iTerm. Comment out if iTerm not starting sessions in new tabs!
#tmux kill-session

tmux rename-session -t $itermSession $session

# Select pane 1, set dir to api
tmux selectp -t 0 
tmux send-keys "source ~/.bash_profile; clear" C-m
tmux send-keys "api" C-m 

# Select pane 2 
tmux selectp -t 1
tmux send-keys "redis-server" C-m 
tmux splitw -v -p 50

# select pane 3, set to api root, launch sidekiq
tmux selectp -t 2
#tmux send-keys "source ~/.bash_profile" C-m
tmux send-keys "api" C-m 
tmux send-keys "sidekiq" C-m 

# Select pane 1
tmux selectp -t 0

# Finished setup, attach to the tmux session!
tmux attach-session -t $session
